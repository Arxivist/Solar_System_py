from visual import *

scene = display (width = 1000, height = 1000)
Sun = sphere(pos=(0,0,0),radius = 100, color = color.orange)
Earth = sphere(pos=(200,0,0), radius = 10, material = materials.earth, make_trail = true)
#Earth.trail_object.color=color.orange
trail = curve(color=color.red)


Earth.v = vector (0,-7.5,0)

for i in range (1000):
    rate(50)
    dist = (Earth.x**2+Earth.y**2+Earth.z**2)**0.5
    r= (Sun.pos-Earth.pos)/dist
    Fgrav = 10000*r/dist**2
    Earth.v+=Fgrav
    Earth.pos+=Earth.v
    trail.append(pos=Earth.pos)
    if dist <= Sun.radius : break
